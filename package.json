{
  "name": "dev-network",
  "version": "1.0.0",
  "description": "network",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd client && npm run start",
    "dev": "concurrently \"npm run server\" \"cd client && npm run start\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "test": "jest --watch -i",
    "test-coverage": "jest --coverage",
    "test-CI-server": "jest",
    "test-CI-client": "npm run test-CI --prefix client",
    "coveralls-server": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "coveralls-client": "npm run test-CI --prefix client && cat ./client/coverage/lcov.info | coveralls"
  },
  "private": true,
  "author": "Grauero",
  "license": "ISC",
  "keywords": [
    "React",
    "Redux",
    "Node",
    "Express",
    "MongoDB"
  ],
  "homepage": "https://github.com/Grauero/SocialNetwork",
  "repository": {
    "type": "git",
    "url": "https://github.com/Grauero/SocialNetwork.git"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^4.0.1",
    "express": "^4.16.4",
    "gravatar": "^1.6.0",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.3.4",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "validator": "^10.8.0"
  },
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-react": "^7.12.4",
    "jest": "^23.6.0",
    "supertest": "^3.3.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$",
      "/client/"
    ]
  }
}
